<?php

/**
 * Implements hook_alter_form().
 */

 use \Drupal\Core\Form\FormStateInterface;

function task_32_form_alter(&$form, FormStateInterface $form_state, $form_id) {
    $form['phone'] = [
      '#type' => 'textfield',
      '#title' => 'Phone:',
      '#placeholder' => t('Enter your phone number'),
    ];
}